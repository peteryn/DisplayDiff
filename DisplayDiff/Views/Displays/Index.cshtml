@model IEnumerable<DisplayDiff.Models.Display>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VerticalResolution)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HorizontalResolution)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdaptiveSync)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PanelType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiagonalLength)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RefreshRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullSpecsURL)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VerticalResolution)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HorizontalResolution)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdaptiveSync)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PanelType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiagonalLength)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RefreshRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullSpecsURL)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
